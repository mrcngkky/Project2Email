@model Project2EmailNight.Dtos.UserLoginDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Giriş Yap - Syndash</title>
    <link rel="icon" href="~/assets/images/favicon-32x32.png" type="image/png" />
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/icons.css" />
    <link rel="stylesheet" href="~/assets/css/app.css" />
</head>

<body class="bg-login">
    <div class="wrapper">
        <div class="section-authentication-login d-flex align-items-center justify-content-center min-vh-100">
            <div class="row w-100">
                <div class="col-12 col-lg-8 mx-auto">
                    <div class="card radius-15 overflow-hidden">
                        <div class="row g-0">
                            <div class="col-xl-6">
                                <div class="card-body p-5">
                                    <div class="text-center">
                                        <img src="~/assets/images/logo-icon.png" width="80" alt="">
                                        <h3 class="mt-4 font-weight-bold">Hoş Geldiniz</h3>
                                    </div>

                                    @* 1. DOĞRULAMA BAŞARI MESAJI *@
                                    @if (TempData["SuccessMessage"] != null)
                                    {
                                        <div class="alert alert-success mt-3 border-0 bg-success alert-dismissible fade show py-2">
                                            <div class="text-white">@TempData["SuccessMessage"]</div>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                        </div>
                                    }

                                    @* 2. YANLIŞ ŞİFRE/KULLANICI MESAJI (ViewBag.Error) *@
                                    @if (ViewBag.Error != null)
                                    {
                                        <div class="alert alert-danger mt-3 border-0 bg-danger alert-dismissible fade show py-2">
                                            <div class="text-white">@ViewBag.Error</div>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                        </div>
                                    }

                                    @* 3. IDENTITY HATA ÖZETLERİ *@
                                    <div asp-validation-summary="ModelOnly" class="text-danger small mt-2"></div>

                                    <div class="form-body mt-4">
                                        <form class="row g-3" method="post">
                                            <div class="col-12">
                                                <label class="form-label">Kullanıcı Adı</label>
                                                <input type="text" asp-for="Username" class="form-control" placeholder="Kullanıcı adınızı girin" required>
                                            </div>
                                            <div class="col-12">
                                                <label class="form-label">Şifre</label>
                                                <div class="input-group" id="show_hide_password">
                                                    <input type="password" asp-for="Password" class="form-control border-end-0" placeholder="Şifrenizi girin" required>
                                                    <a href="javascript:;" class="input-group-text bg-transparent"><i class="bx bx-hide"></i></a>
                                                </div>
                                            </div>
                                            <div class="col-12 mt-4">
                                                <div class="d-grid">
                                                    <button type="submit" class="btn btn-primary"><i class="bx bxs-lock-open"></i> Giriş Yap</button>
                                                </div>
                                            </div>
                                            <div class="col-12 text-center mt-3">
                                                <p class="small">Hesabınız yok mu? <a asp-action="CreateUser" asp-controller="Register">Kayıt olun</a></p>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6 bg-login-color d-flex align-items-center justify-content-center">
                                <img src="~/assets/images/login-images/login-frent-img.jpg" class="img-fluid" alt="Giriş Yap">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#show_hide_password a").on('click', function (event) {
                event.preventDefault();
                if ($('#show_hide_password input').attr("type") == "text") {
                    $('#show_hide_password input').attr('type', 'password');
                    $('#show_hide_password i').addClass("bx-hide");
                    $('#show_hide_password i').removeClass("bx-show");
                } else if ($('#show_hide_password input').attr("type") == "password") {
                    $('#show_hide_password input').attr('type', 'text');
                    $('#show_hide_password i').removeClass("bx-hide");
                    $('#show_hide_password i').addClass("bx-show");
                }
            });
        });
    </script>
</body>
</html>