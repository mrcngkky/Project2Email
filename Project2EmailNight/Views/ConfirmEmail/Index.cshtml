@model Project2EmailNight.Dtos.ConfirmUserDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Email Doğrulama - Syndash</title>
    <link rel="icon" href="~/assets/images/favicon-32x32.png" type="image/png" />
    <link href="~/assets/css/pace.min.css" rel="stylesheet" />
    <script src="~/assets/js/pace.min.js"></script>
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&family=Roboto&display=swap" />
    <link rel="stylesheet" href="~/assets/css/icons.css" />
    <link rel="stylesheet" href="~/assets/css/app.css" />
</head>

<body class="bg-forgot">
    <div class="wrapper">
        <div class="authentication-forgot d-flex align-items-center justify-content-center">
            <div class="card shadow-lg" style="width: 500px;">
                <div class="card-body p-md-5">

                    <div class="text-center">
                        <img src="~/assets/images/icons/forgot-2.png" width="120" alt="" />
                    </div>

                    <h4 class="mt-5 font-weight-bold text-center">Hesap Doğrulama</h4>
                    <p class="text-muted text-center">Lütfen email adresinize gönderilen 6 haneli kodu giriniz.</p>

                    <form method="post">

                        <div class="mb-3 mt-4">
                            <label class="form-label">Email Adresi</label>
                            <input type="text" class="form-control form-control-lg" asp-for="Mail" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Doğrulama Kodu</label>
                            <input type="text" class="form-control form-control-lg text-center" asp-for="ConfirmCode" placeholder="######" maxlength="6" required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Hesabı Onayla</button>
                            <a asp-controller="Login" asp-action="UserLogin" class="btn btn-light btn-lg"><i class='bx bx-arrow-back me-1'></i>Giriş Ekranına Dön</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <script src="~/assets/js/jquery.min.js"></script>
</body>
</html>