@model Project2EmailNight.Dtos.UserEditDto

@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">

    <div class="d-flex align-items-center justify-content-between mb-4">
        <h4 class="mb-0 text-uppercase text-secondary">Kullanıcı Profili</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Dashboard/Index"><i class='bx bx-home-alt'></i></a></li>
                <li class="breadcrumb-item active" aria-current="page">Profil</li>
            </ol>
        </nav>
    </div>

    <div class="row">

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 rounded-4 mb-3">
                <div class="card-body text-center p-4">

                    <div class="position-relative d-inline-block">
                        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://bootdey.com/img/Content/avatar/avatar7.png" : "/images/" + Model.ImageUrl)"
                             alt="Profil Resmi"
                             class="rounded-circle p-1 bg-white border"
                             width="140" height="140"
                             style="object-fit: cover;">
                    </div>

                    <h5 class="mt-3 mb-1 text-dark fw-bold">@Model.Name @Model.Surname</h5>
                    <p class="text-secondary mb-1">Hesap Yöneticisi</p>
                    <p class="text-muted font-size-sm"><i class="bx bx-map me-1"></i>Ankara, Türkiye</p>

                    <div class="d-flex justify-content-center gap-4 mt-3 border-top pt-3">
                        <div class="text-center">
                            <h6 class="mb-0 fw-bold">254</h6>
                            <small class="text-muted">Takipçi</small>
                        </div>
                        <div class="text-center">
                            <h6 class="mb-0 fw-bold">54</h6>
                            <small class="text-muted">Fotoğraf</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body">
                    <h6 class="mb-3 text-primary fw-bold">İletişim Bilgileri</h6>
                    <div class="d-flex align-items-center mb-3">
                        <div class="font-20 text-secondary"><i class='bx bx-envelope'></i></div>
                        <div class="ms-3">
                            <h6 class="mb-0 text-dark">Email</h6>
                            <small class="text-muted">@Model.Email</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <div class="font-20 text-secondary"><i class='bx bx-phone'></i></div>
                        <div class="ms-3">
                            <h6 class="mb-0 text-dark">Telefon</h6>
                            <small class="text-muted">+90 532 123 45 67</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="font-20 text-secondary"><i class='bx bx-globe'></i></div>
                        <div class="ms-3">
                            <h6 class="mb-0 text-dark">Website</h6>
                            <small class="text-muted">project2emailnight.com</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body">

                    <ul class="nav nav-pills nav-fill mb-4 border-bottom pb-3" id="pills-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active fw-bold" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button"><i class='bx bx-user me-1'></i> Profil Detayları</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link fw-bold" id="pills-settings-tab" data-bs-toggle="pill" data-bs-target="#pills-settings" type="button"><i class='bx bx-edit me-1'></i> Profili Düzenle</button>
                        </li>
                    </ul>

                    <div class="tab-content" id="pills-tabContent">

                        <div class="tab-pane fade show active" id="pills-profile" role="tabpanel">
                            <h6 class="mb-3 text-primary fw-bold">Kişisel Bilgiler</h6>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label class="form-label text-muted small">Ad Soyad</label>
                                    <p class="fw-bold text-dark">@Model.Name @Model.Surname</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-muted small">Email</label>
                                    <p class="fw-bold text-dark">@Model.Email</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-muted small">Konum</label>
                                    <p class="fw-bold text-dark">Ankara, Türkiye</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-muted small">Kayıt Tarihi</label>
                                    <p class="fw-bold text-dark">10 Şubat 2026</p>
                                </div>
                            </div>

                            <h6 class="mb-3 text-primary fw-bold">Yetenekler</h6>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="fw-bold text-dark">E-posta Yönetimi</span>
                                    <span class="text-primary fw-bold">85%</span>
                                </div>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 85%"></div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="fw-bold text-dark">Proje Yönetimi</span>
                                    <span class="text-warning fw-bold">70%</span>
                                </div>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: 70%"></div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="fw-bold text-dark">İletişim</span>
                                    <span class="text-success fw-bold">95%</span>
                                </div>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 95%"></div>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="pills-settings" role="tabpanel">
                            <form method="post" enctype="multipart/form-data">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Ad</label>
                                        <input type="text" class="form-control" asp-for="Name">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Soyad</label>
                                        <input type="text" class="form-control" asp-for="Surname">
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Email Adresi</label>
                                        <input type="text" class="form-control" asp-for="Email">
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Yeni Şifre</label>
                                        <input type="password" class="form-control" asp-for="Password" placeholder="Değiştirmek istemiyorsanız boş bırakın">
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Profil Fotoğrafı</label>
                                        <input type="file" class="form-control" asp-for="Image">
                                        <div class="form-text">JPG veya PNG formatında, maksimum 5MB.</div>
                                    </div>
                                    <div class="col-12 text-end mt-4">
                                        <button type="submit" class="btn btn-primary px-4 py-2"><i class='bx bx-save'></i> Değişiklikleri Kaydet</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>